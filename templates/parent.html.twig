<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mon Projet Symfony</title>
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    <link rel="stylesheet" href="{{ asset('css/style-dev1.css') }}">
    <link rel="stylesheet" href="{{ asset('css/style-dev2.css') }}">
    <link rel="stylesheet" href="{{ asset('css/style-dev3.css') }}">

    {% block carte1 %}
    {% endblock %}

</head>
<body>
    <header>
        <nav>
            <a href="{{ path('index') }}">accueil</a>
            <a href="{{ path('annonces') }}">annonces</a>
            <a href="{{ path('galerie') }}">galerie</a>
            <a href="{{ path('contact') }}">contact</a>
        </nav>
        {% if is_granted('ROLE_ADMIN') %}
            <div class="mb-3">
                Bienvenue {{ app.user.username }}, 
                <a href="{{ path('admin') }}">admin</a>
                <a href="{{ path('app_logout') }}">Déconnexion</a>
            </div>
        {% elseif is_granted('ROLE_USER') %}
            <div class="mb-3">
                Bienvenue {{ app.user.username }}, 
                <a href="{{ path('membre') }}">espace membre</a>
                <a href="{{ path('app_logout') }}">Déconnexion</a>
            </div>
        {% else %}
            <nav>
                <a href="{{ path('app_register') }}">créez votre compte</a>
                <a href="{{ path('app_login') }}">connexion</a>
            </nav>
        {% endif %}
    </header>
    <main>
        <section>
            {% block titre1 %}
            {% endblock %}

            {% block titre2 %}
            {% endblock %}

            {% block commentaire1 %}
            {% endblock %}

            {% block annonces %}
            {% endblock %}

            {% block photo1 %}
            {% endblock %}

            {% block formulaire %}
            {% endblock %}

            {% block carte2 %}
            {% endblock %}


        </section>
    </main>
    <footer>
        <p>tous droits réservés</p>
    </footer>
    <script src="{{ asset('js/script.js') }}"></script>
</body>
</html>